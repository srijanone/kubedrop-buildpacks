#!/usr/bin/env bash
set -eo pipefail
set -x

echo "---> Drupal Buildpack"
# 1. GET ARGS
layersdir=$1
echo $layersdir

# Install composer packages
composer install --no-dev --prefer-dist --no-progress --no-suggest --no-interaction --optimize-autoloader

# SET DEFAULT START COMMAND
cat > "$layersdir/launch.toml" <<EOL
[[processes]]
type = "web"
command = "start.sh"
EOL